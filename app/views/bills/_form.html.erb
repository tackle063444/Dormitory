          <% end %>
          <%= form.fields_for :head_lists, HeadList.new(bill_list_id: 3) do |head_list| %>
            <%= render 'head_list_fields', f: head_list %>
          <% end %>
          <%= form.fields_for :head_lists, HeadList.new(bill_list_id: 1) do |head_list| %>
            <%= render 'head_list_fields', f: head_list %>
          <% end %>
