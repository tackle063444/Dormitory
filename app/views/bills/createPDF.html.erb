require 'prawn'

class PdfGenerator
  def self.generate(bill)
    pdf = Prawn::Document.new

    pdf.text "Bill No. #{bill.bill_no}", size: 20, align: :center
    pdf.move_down 20

    pdf.text "Rent Details", size: 16, style: :bold
    pdf.move_down 10
    pdf.text "Room No. #{bill.rent.room.room_num}"
    pdf.text "User: #{bill.rent.user.user_fname} #{bill.rent.user.user_lname}"
    pdf.text "Address: #{bill.rent.user.user_address}"
    pdf.text "Tel: #{bill.rent.user.user_tel}"
    pdf.move_down 20

    pdf.text "Bill Details", size: 16, style: :bold
    pdf.move_down 10
    pdf.text "Date: #{bill.bill_date}"
    pdf.text "Total: #{bill.bill_total}"
    pdf.text "Remark: #{bill.bill_remark}"

    pdf.render
  end
end
