<!DOCTYPE html>
<%= javascript_include_tag 'bill_list', 'data-turbolinks-track': 'reload' %>
</head>
<body>
<div id="fh5co-page">
  <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
  <aside id="fh5co-aside" role="complementary" class="border js-fullheight">
    <h1 id="fh5co-logo"><a href="index.html">Bill</a></h1>
    <nav id="fh5co-main-menu" role="navigation">
      <ul>
        <li><%= link_to 'Dormitory', halls_path %></li>
        <li><%= link_to 'Room', rooms_path %></li>
        <li><%= link_to 'User', users_path %></li>
        <li><%= link_to 'Rent', rents_path %></li>
        <li class="fh5co-active"><%= link_to 'Bill', bills_path %></li>
        <li><%= link_to 'List', bill_lists_path %></li>
      </ul>
    </nav>
  </aside>

  <div id="fh5co-main">
    <div class="fh5co-narrow-content">
      <h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">แก้ไขข้อมูล</h2>
      <%= form_with(model: @bill, url: bill_path(@bill), local: true, method: :patch) do |form| %>
        <p id="notice"><%= notice %></p>
        <%= render 'form', bill: @bill %>
        <table>
          <tr>
            <td>
              <%= form.fields_for :head_lists do |head_list| %>
                <%= render 'head_list_fields', f: head_list %>
                <script>
                updateUnitPrice($(this)); 
                </script>
              <% end %>

              <div class="links">
                <%= link_to_add_association 'เพิ่มรายการ', form, :head_lists, class: 'btn btn-primary' %>
              </div>
            </td>
          </tr>
          <tr>
            <td class="bill_total">
              <%= form.label :ยอดรวมทั้งหมด %>
              <%= form.number_field :bill_total, class: 'bill_total', step: 'any' %>
            </td>
          </tr>
        </table>

      <% end %> 
    </div>
  </div>
</div>
</body>
</html>
