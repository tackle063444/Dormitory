
<!DOCTYPE html>


	</head>
	<body>
	<div id="fh5co-page">
		<a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
		<aside id="fh5co-aside" role="complementary" class="border js-fullheight">

			<h1 id="fh5co-logo">Rent</h1>
			<nav id="fh5co-main-menu" role="navigation">
				<ul>
					<li><%= link_to 'Dormitory', halls_path %></li>
					<li><%= link_to 'Room', rooms_path %></li>
					<li><%= link_to 'User', users_path %></li>
					<li><%= link_to 'Rent', rents_path %></li>
					<li><%= link_to 'Bill', bills_path %></li>
					<li><%= link_to 'List', bill_lists_path %></li>
          <li class="fh5co-active"><%= link_to 'More List', more_lists_path %></li>
				</ul>
			</nav>

		</aside>

	<div id="fh5co-main">
		<div class="fh5co-narrow-content">
				<h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">Rent</h2>
				<%= link_to 'เพิ่มรายการเพิ่มเติม', new_more_list_path, class:"btn btn-outline-success" %>
         <p id="notice"><%= notice %></p>
         <table class="table table-dark table-hover">
         <thead>
           <tr>
             <th colspan="3">รายรับ</th>
           </tr>
         </thead>
       
         <tbody>
           <% @more_lists.each do |more_list| %>
             <% if more_list.type_morelist == 'form1' %>
               <tr>
                 <td><%= more_list.form_select_text %></td>
                 <td><%= more_list.name_morelist %></td>
                 <td><%= more_list.unit_morelist %></td>
                 <td><%= link_to 'Edit', edit_more_list_path(more_list) %></td>
                 <td><%= button_to 'Destroy', more_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
             <% end %>
           <% end %>
         </tbody>
       </table>
       
       <br>
       
       <table class="table table-dark table-hover">
         <thead>
           <tr>
             <th colspan="3">รายจ่าย</th>
           </tr>
         </thead>
       
         <tbody>
           <% @more_lists.each do |more_list| %>
             <% if more_list.type_morelist == 'form2' %>
               <tr>
                 <td><%= more_list.form_select_text %></td>
                 <td><%= more_list.name_morelist %></td>
                 <td><%= more_list.unit_morelist %></td>
                 <td><%= link_to 'Edit', edit_more_list_path(more_list) %></td>
                 <td><%= button_to 'Destroy', more_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
               </tr>
             <% end %>
           <% end %>
         </tbody>
       </table>
       
         <br>
			</div>
		</div>
	</div>
          
	</body>
</html>










