
<!DOCTYPE html>



	</head>
	<body>
	<div id="fh5co-page">
		<a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
		<aside id="fh5co-aside" role="complementary" class="border js-fullheight">
			<h1 id="fh5co-logo">Room</h1>
			<nav id="fh5co-main-menu" role="navigation">
				<ul>
					<li><%= link_to 'Dormitory', halls_path %></li>
					<li class="fh5co-active"><%= link_to 'Room', rooms_path %></li>
					<li><%= link_to 'User', users_path %></li>
					<li><%= link_to 'Rent', rents_path %></li>
					<li><%= link_to 'Bill', bills_path %></li>
					<li><%= link_to 'List', bill_lists_path %></li>
				</ul>
			</nav>
		</aside>

	<div id="fh5co-main">
		<div class="fh5co-narrow-content">
				<h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">ข้อมูลห้องพัก</h2>
				
        <p id="notice"><%= notice %></p>
        <p>
          <strong>Hall:</strong>
          <%= @room.hall.hall_name %>
        </p>

        <p>
            <% @room.rents.joins(:room, :user).each do |rent| %>
			<% if rent.room_id == @room.id %>
			<strong>User:</strong>
			<%= rent.user.user_fname %>
			<% end %>
			<% end %>
        </p>

        <p>
          <strong>Room num:</strong>
          <%= @room.room_num %>
        </p>

        <p>
          <strong>Room status:</strong>
          <%= @room.room_status %>
        </p>

        <%= button_to 'Edit', edit_room_path(@room), class: 'btn btn-primary' %> |
        <%= button_to 'Back', rooms_path, class: 'btn btn-primary' %>

			</div>
		</div>
	</div>
             

	</body>
</html>


