<p id="notice"><%= notice %></p>

<h1>Statements</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Bill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statements.each do |statement| %>
      <tr>
        <td><%= statement.Bill %></td>
        <td><%= link_to 'Show', statement, class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_statement_path(statement), class:'btn btn-outline-warning' %></td>
        <td><%= link_to 'Destroy', statement, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Statement', new_statement_path, class: 'btn btn-outline-success' %>
<%= link_to 'Back', rooms_path, class: 'btn btn-outline-dark' %>
